/**
 * Catalog Event product page
 *
 * @var $block \Magento\CatalogEvent\Block\Catalog\Product\Event
 */
?>
<?php $_event = $block->getEvent(); ?>
<?php if ($block->canDisplay()): ?>
<div class="block block-category-event <?= /* @escapeNotVerified */ $_event->getStatus() ?>">
    <div class="block-title">
        <strong>
            <?= /* @escapeNotVerified */ $block->getStatusText($_event) ?>
        </strong>
    </div>
    <div class="block-content">
        <?php switch ($_event->getStatus()):
            case \Magento\CatalogEvent\Model\Event::STATUS_UPCOMING: ?>
            <div class="dates">
                <div class="start">
                    <span class="date"><?= /* @escapeNotVerified */ $block->getEventDate('start', $_event) ?></span>
                    <span class="time"><?= /* @escapeNotVerified */ $block->getEventTime('start', $_event, 'hh a zzz') ?></span>
                </div>
                <div class="end">
                    <span class="date"><?= /* @escapeNotVerified */ $block->getEventDate('end', $_event) ?></span>
                    <span class="time"><?= /* @escapeNotVerified */ $block->getEventTime('end', $_event, 'hh a zzz') ?></span>
                </div>
            </div>
        <?php break;
            case \Magento\CatalogEvent\Model\Event::STATUS_OPEN: ?>
            <ul class="ticker" id="event-ticker-<?= /* @escapeNotVerified */ $_event->getId() ?>"
                data-mage-init='{"ticker":{"eventEndTimeUTC": <?= /* @escapeNotVerified */ $block->getEndTimeUTC($_event) ?>}}'>
                <li class="days">
                    <span data-container="days" class="value">&nbsp;</span>
                    <span class="label"><?= /* @escapeNotVerified */ __('Days') ?></span>
                </li>
                <li class="hour">
                    <span data-container="hour" class="value">&nbsp;</span>
                    <span class="label"><?= /* @escapeNotVerified */ __('Hrs') ?></span>
                </li>
                <li class="minute">
                    <span data-container="minute" class="value">&nbsp;</span>
                    <span class="label"><?= /* @escapeNotVerified */ __('Mins') ?></span>
                </li>
                <li class="second">
                    <span data-container="second" class="value">&nbsp;</span>
                    <span class="label"><?= /* @escapeNotVerified */ __('Sec') ?></span>
                </li>
            </ul>
        <?php break;
            case \Magento\CatalogEvent\Model\Event::STATUS_CLOSED: ?>
            <div class="dates">
                <div class="start">
                    <span class="date"><?= /* @escapeNotVerified */ $block->getEventDate('start', $_event) ?></span>
                    <span class="time"><?= /* @escapeNotVerified */ $block->getEventTime('start', $_event, 'hh a zzz') ?></span>
                </div>
                <div class="end">
                    <span class="date"><?= /* @escapeNotVerified */ $block->getEventDate('end', $_event) ?></span>
                    <span class="time"><?= /* @escapeNotVerified */ $block->getEventTime('end', $_event, 'hh a zzz') ?></span>
                </div>
            </div>
        <?php break; ?>
    <?php endswitch; ?>
    </div>
</div>
<?php endif; ?>
