                                        <td data-th="<?= $block->escapeHtml(__('Remaining Qty')) ?>" class="col remaining qty"><?= /* @escapeNotVerified */ $item[2] ?></td>
                                        <td data-th="<?= $block->escapeHtml(__('Qty')) ?>" class="col qty">
