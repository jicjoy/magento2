<input type="hidden" name="<?= $block->escapeHtmlAttr($block->getNamePrefix()) ?>[__empty]" value="1" id="<?= $block->getHtmlId() ?>" />
<ul class="checkboxes">
<?php foreach ($block->getLabels() as $name => $label): ?>
    <li>
        <input type="checkbox" value="1" name="<?= $block->escapeHtmlAttr($block->getNamePrefix()) ?>[<?= $block->escapeHtmlAttr($name) ?>]" id="<?= $block->escapeHtmlAttr($block->getHtmlId() . '_' . $name) ?>"<?= /* @noEscape */ ($block->getIsChecked($name) ? ' checked="checked"' : '') ?>/><label for="<?= $block->escapeHtmlAttr($block->getHtmlId() . '_' . $name) ?>">
