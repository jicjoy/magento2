<tabs>
    <rule_information>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#magento_reminder_rule_tabs_general_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <salesrule_id>
                <selector>#salesrule_id + label</selector>
                <class>\Magento\Reminder\Test\Block\Adminhtml\Reminder\Edit\General\SalesruleId</class>
            </salesrule_id>
            <is_active>
                <input>select</input>
            </is_active>
            <from_date>
                <input>datepicker</input>
            </from_date>
            <to_date>
                <input>datepicker</input>
            </to_date>
        </fields>
    </rule_information>
    <conditions>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#magento_reminder_rule_tabs_conditions_section</selector>
        <strategy>css selector</strategy>
        <fields>
            <conditions_serialized>
                <selector>#rule_conditions_fieldset</selector>
                <input>conditions</input>
            </conditions_serialized>
        </fields>
    </conditions>
    <emails_and_labels>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#magento_reminder_rule_tabs_template_section</selector>
        <strategy>css selector</strategy>
    </emails_and_labels>
    <matched_customers>
        <class>\Magento\Reminder\Test\Block\Adminhtml\Reminder\Edit\Customers</class>
        <selector>#magento_reminder_rule_tabs_matched_customers</selector>
        <strategy>css selector</strategy>
    </matched_customers>
</tabs>
