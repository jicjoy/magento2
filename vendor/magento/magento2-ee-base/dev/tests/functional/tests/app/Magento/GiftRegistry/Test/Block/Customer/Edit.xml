<mapping strict="0">
    <fields>
        <title />
        <message>
            <input>textarea</input>
        </message>
        <is_public>
            <input>select</input>
        </is_public>
        <is_active>
            <input>select</input>
        </is_active>
        <event_country>
            <input>select</input>
        </event_country>
        <event_country_region>
            <input>select</input>
        </event_country_region>
        <event_date />
        <event_location />
        <number_of_guests>
            <selector>[name="registry[number_of_guests]"]</selector>
        </number_of_guests>
        <baby_gender>
            <input>select</input>
            <selector>[name="registry[baby_gender]"]</selector>
        </baby_gender>
        <person_ids>
            <class>\Magento\GiftRegistry\Test\Block\Customer\Edit\Registrants</class>
            <selector>.recipients</selector>
            <strategy>css selector</strategy>
        </person_ids>
        <address>
            <class>\Magento\GiftRegistry\Test\Block\Customer\Edit\Address</class>
            <selector>.shipping_address</selector>
            <strategy>css selector</strategy>
        </address>
    </fields>
</mapping>
