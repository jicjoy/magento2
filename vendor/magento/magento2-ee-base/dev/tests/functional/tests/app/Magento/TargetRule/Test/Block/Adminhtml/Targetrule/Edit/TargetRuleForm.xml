<tabs>
    <rule_information>
        <class>\Magento\TargetRule\Test\Block\Adminhtml\Targetrule\Edit\Tab\Main</class>
        <selector>#targetrule_tabs_magento_targetrule_edit_tab_main</selector>
        <strategy>css selector</strategy>
        <fields>
            <name />
            <sort_order />
            <is_active>
                <input>select</input>
            </is_active>
            <apply_to>
                <input>select</input>
            </apply_to>
            <from_date />
            <to_date />
            <positions_limit />
            <use_customer_segment>
                <input>select</input>
            </use_customer_segment>
            <customer_segment_ids>
                <selector>[name="customer_segment_ids[]"]</selector>
                <input>multiselect</input>
            </customer_segment_ids>
        </fields>
    </rule_information>
    <products_to_match>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#targetrule_tabs_magento_targetrule_edit_tab_conditions</selector>
        <strategy>css selector</strategy>
        <fields>
            <conditions_serialized>
                <selector>#rule_conditions_fieldset</selector>
                <strategy>css selector</strategy>
                <input>conditions</input>
            </conditions_serialized>
        </fields>
    </products_to_match>
    <products_to_display>
        <class>\Magento\Backend\Test\Block\Widget\Tab</class>
        <selector>#targetrule_tabs_magento_targetrule_edit_tab_actions</selector>
        <strategy>css selector</strategy>
        <fields>
            <actions_serialized>
                <selector>#rule_actions_fieldset</selector>
                <strategy>css selector</strategy>
                <input>conditions</input>
            </actions_serialized>
        </fields>
    </products_to_display>
</tabs>
