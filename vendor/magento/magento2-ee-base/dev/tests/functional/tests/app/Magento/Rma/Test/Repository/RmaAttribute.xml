            <field name="is_visible" xsi:type="string">Yes</field>
            <field name="sort_order" xsi:type="string">5</field>
            <field name="value" xsi:type="string">new</field>
            <field name="options" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">new</item>
                    <item name="view" xsi:type="string">option_0_%isolation%</item>
                </item>
                <item name="1" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">broken</item>
                    <item name="view" xsi:type="string">option_1_%isolation%</item>
                </item>
                <item name="2" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">absent</item>
                    <item name="view" xsi:type="string">option_2_%isolation%</item>
                </item>
            </field>
        </dataset>
    </repository>
</config>
