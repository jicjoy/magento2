<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/Magento/Mtf/Repository/etc/repository.xsd">
    <repository class="Magento\Rma\Test\Repository\RmaAttribute">
        <dataset name="default">
            <field name="frontend_label" xsi:type="string">dropdown_%isolation%</field>
            <field name="attribute_code" xsi:type="string">dropdown_%isolation%</field>
            <field name="frontend_input" xsi:type="string">Yes/No</field>
