        <dataset name="required_attribute">
            <field name="frontend_label" xsi:type="string">Condition of packaging</field>
            <field name="attribute_code" xsi:type="string">dropdown_%isolation%</field>
            <field name="frontend_input" xsi:type="string">Dropdown</field>
