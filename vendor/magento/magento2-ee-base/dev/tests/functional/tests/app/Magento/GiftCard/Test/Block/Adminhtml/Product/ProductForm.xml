<sections>
    <product-details>
        <fields>
            <giftcard_type>
                <input>select</input>
            </giftcard_type>
            <giftcard_amounts>
                <selector>div[data-index="giftcard_amounts"]</selector>
                <class>Magento\GiftCard\Test\Block\Adminhtml\Product\Edit\Tab\ProductDetails\Amount</class>
            </giftcard_amounts>
            <allow_open_amount>
                <input>switcher</input>
            </allow_open_amount>
        </fields>
    </product-details>
    <giftcard>
        <class>\Magento\Ui\Test\Block\Adminhtml\Section</class>
        <selector>[data-index="giftcard-information"]</selector>
        <strategy>css selector</strategy>
        <wrapper>product</wrapper>
        <fields>
            <use_config_is_redeemable>
                <input>checkbox</input>
            </use_config_is_redeemable>
            <is_redeemable>
                <input>switcher</input>
            </is_redeemable>
            <use_config_lifetime>
                <input>checkbox</input>
            </use_config_lifetime>
            <use_config_allow_message>
                <input>checkbox</input>
            </use_config_allow_message>
            <allow_message>
                <input>switcher</input>
            </allow_message>
            <use_config_email_template>
                <input>checkbox</input>
            </use_config_email_template>
            <email_template>
                <input>select</input>
            </email_template>
        </fields>
    </giftcard>
</sections>
