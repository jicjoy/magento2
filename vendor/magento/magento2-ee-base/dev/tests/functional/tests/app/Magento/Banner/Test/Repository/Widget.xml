<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/Magento/Mtf/Repository/etc/repository.xsd">
    <repository class="Magento\Widget\Test\Repository\Widget">
        <dataset name="banner_rotator_non_anchor_categories">
            <field name="code" xsi:type="string">Banner Rotator</field>
            <field name="title" xsi:type="string">Banner Rotator %isolation%</field>
            <field name="theme_id" xsi:type="string">Magento Luma</field>
            <field name="store_ids" xsi:type="array">
                <item name="dataset" xsi:type="string">all_store_views</item>
            </field>
            <field name="widget_instance" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="page_group" xsi:type="string">Categories/Non-Anchor Categories</item>
                    <item name="block" xsi:type="string">Main Content Area</item>
                    <item name="template" xsi:type="string">Banner Block Template</item>
                </item>
            </field>
            <field name="parameters" xsi:type="array">
                <item name="display_mode" xsi:type="string">Specified Banners</item>
            </field>
        </dataset>

        <dataset name="banner_rotator_shoping_cart">
            <field name="code" xsi:type="string">Banner Rotator</field>
            <field name="title" xsi:type="string">Banner Rotator %isolation%</field>
            <field name="theme_id" xsi:type="string">Magento Luma</field>
            <field name="store_ids" xsi:type="array">
                <item name="dataset" xsi:type="string">all_store_views</item>
            </field>
            <field name="widget_instance" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="page_group" xsi:type="string">Generic Pages/Specified Page</item>
                    <item name="layout_handle" xsi:type="string">Shopping Cart</item>
                    <item name="block" xsi:type="string">Main Content Area</item>
                    <item name="template" xsi:type="string">Banner Block Template</item>
                </item>
            </field>
            <field name="parameters" xsi:type="array">
                <item name="display_mode" xsi:type="string">Specified Banners</item>
            </field>
        </dataset>

        <dataset name="banner_rotator">
            <field name="code" xsi:type="string">Banner Rotator</field>
            <field name="title" xsi:type="string">Banner Rotator %isolation%</field>
            <field name="theme_id" xsi:type="string">Magento Luma</field>
            <field name="store_ids" xsi:type="array">
                <item name="dataset" xsi:type="string">all_store_views</item>
            </field>
            <field name="widget_instance" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="page_group" xsi:type="string">Generic Pages/All Pages</item>
                    <item name="block" xsi:type="string">Main Content Area</item>
                    <item name="template" xsi:type="string">Banner Block Template</item>
                </item>
            </field>
            <field name="parameters" xsi:type="array">
                <item name="display_mode" xsi:type="string">Catalog Promotions Related</item>
            </field>
        </dataset>

        <dataset name="widget_banner_rotator">
            <field name="code" xsi:type="string">Banner Rotator</field>
            <field name="theme_id" xsi:type="string">Magento Luma</field>
        </dataset>
    </repository>
</config>
