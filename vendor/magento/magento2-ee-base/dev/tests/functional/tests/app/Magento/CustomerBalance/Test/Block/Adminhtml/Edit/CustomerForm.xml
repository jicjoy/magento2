<tabs>
    <store_credit>
        <class>\Magento\CustomerBalance\Test\Block\Adminhtml\Customer\Edit\Tab\Tab</class>
        <selector>#tab_customerbalance_content</selector>
        <strategy>css selector</strategy>
        <wrapper>customerbalance</wrapper>
        <fields>
            <amount_delta />
            <website_id>
                <selector>[name="customerbalance[website_id]"]</selector>
                <input>select</input>
            </website_id>
            <balance_delta>
                <selector>[name="customerbalance[amount_delta]"]</selector>
            </balance_delta>
            <is_customer_notified>
                <selector>[name="customerbalance[notify_by_email]"]</selector>
                <input>checkbox</input>
            </is_customer_notified>
            <additional_info>
                <selector>[name="customerbalance[comment]"]</selector>
            </additional_info>
        </fields>
    </store_credit>
</tabs>
