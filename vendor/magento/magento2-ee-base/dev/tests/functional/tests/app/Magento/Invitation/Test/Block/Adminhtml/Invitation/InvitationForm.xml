<tabs>
    <general>
        <class>\Magento\Invitation\Test\Block\Adminhtml\Invitation\View\Tab\General</class>
        <selector>[data-ui-id="invitation-view-tabs-tab-item-general"]</selector>
        <strategy>css selector</strategy>
        <fields>
            <message>
                <selector>//div[contains(@class, "invitation_information")]//table/tbody/tr/th[contains(.,"Message")]/following-sibling::td</selector>
                <strategy>xpath</strategy>
            </message>
            <email>
                <selector>//div[contains(@class, "invitation_information")]//table/tbody/tr/th[contains(.,"Email")]/following-sibling::td</selector>
                <strategy>xpath</strategy>
            </email>
            <status>
                <selector>//div[contains(@class, "invitation_information")]//table/tbody/tr/th[contains(.,"Status")]/following-sibling::td</selector>
                <strategy>xpath</strategy>
            </status>
        </fields>
    </general>
</tabs>
