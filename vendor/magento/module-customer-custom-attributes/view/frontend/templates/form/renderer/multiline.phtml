?>
<?php
$fieldCssClass = 'field multiline field-' . $block->getHtmlId();
$fieldCssClass .= $block->isRequired() ? ' required' : '';
?>
<div class="<?= /* @escapeNotVerified */ $fieldCssClass ?>">
    <label class="label" for="<?= $block->getHtmlId(0) ?>"><span><?= /* @escapeNotVerified */ $block->getLabel() ?></span></label>
    <div class="control">
        <input type="text" id="<?= $block->getHtmlId(0) ?>" name="<?= $block->getFieldName('') ?>" value="<?= /* @escapeNotVerified */ $block->getEscapedValue(0) ?>" class="input-text<?= $block->getHtmlClass() ?>">
        <?php $_message = $block->getAdditionalDescription(); ?>
        <?php if ($block->getLineCount() == 1 && $_message) : ?>
        <div class="note"><?= /* @escapeNotVerified */ $_message ?></div>
        <?php endif; ?>
        <?php if ($block->getLineCount() > 1): ?>
        <div class="nested">
            <?php for ($i = 1, $lc = $block->getLineCount(); $i < $lc; $i ++): ?>
            <div class="field additional no-label">
                <div class="control">
                    <input type="text" id="<?= $block->getHtmlId($i) ?>" name="<?= $block->getFieldName('') ?>" value="<?= /* @escapeNotVerified */ $block->getEscapedValue($i) ?>" class="input-text<?= $block->getLineHtmlClass() ?>">
                <?php if ($block->getLineCount() == $i+1 && $_message) : ?>
                    <div class="note"><?= /* @escapeNotVerified */ $_message ?></div>
                <?php endif; ?>
                </div>
            </div>
            <?php endfor; ?>
        </div>
        <?php endif;?>
    </div>
</div>
